<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Light Mode Theme -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#E0E0E0</item>
        <item name="colorAccent">#4b9490</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Dark Mode Theme -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">#000000</item>
        <item name="colorPrimary">#121212</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#4b9490</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Default Theme (fallback, optional) -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#E0E0E0</item>
        <item name="colorAccent">#4b9490</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Aliases for Kotlin usage -->
    <style name="AppTheme_Light" parent="AppTheme.Light" />
    <style name="AppTheme_Dark" parent="AppTheme.Dark" />
</resources>
