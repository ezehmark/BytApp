<?xml version="1.0" encoding="utf-8"?>
<!-- android/app/src/main/res/values/styles.xml -->
<resources>
  <!-- Theme for splash screen -->
  <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:navigationBarColor">@android:color/transparent</item>
  </style>

  <!-- Light Theme -->
  <style name="AppTheme_Light" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">#FFFFFF</item>
    <item name="colorPrimary">#4b9490</item>
    <item name="colorPrimaryDark">#003f3d</item>
    <item name="colorAccent">#4b9490</item>
    <item name="android:windowLightStatusBar">true</item>
  </style>

  <!-- Dark Theme -->
  <style name="AppTheme_Dark" parent="Theme.AppCompat.NoActionBar">
    <item name="android:windowBackground">#000000</item>
    <item name="colorPrimary">#1c1c1c</item>
    <item name="colorPrimaryDark">#000000</item>
    <item name="colorAccent">#4b9490</item>
    <item name="android:windowLightStatusBar">false</item>
  </style>
</resources>
